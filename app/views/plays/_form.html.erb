<%= simple_form_for @play do |f| %>
  <div class='form-group'>
    <label>Category</label>
    <%= select_tag(:category_id, options_for_select(@categories), prompt: 'Select Category', class: 'form-control') %>
  </div>
  <%= f.input :title, label: 'Play Title' %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>
