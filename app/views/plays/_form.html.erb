<%= simple_form_for @play do |f| %>
  <%= f.input :play_img, label: 'Play Image' %>
  <%= f.association :category, prompt: 'Select Category' %>
  <%= f.input :title, label: 'Play Title' %>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.input :trailer_url %>
  <%= f.button :submit %>
<% end %>
